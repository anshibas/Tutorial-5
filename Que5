class Person:
    def __init__(self, name, age, salary):
        self.name = name
        self.age = age
        self.salary = salary

    def display(self):
        print(f"Name: {self.name}, Age: {self.age}, Salary: â‚¹{self.salary}")

# Creating two instances
person1 = Person("Rahul Verma", 30, 50000)
person2 = Person("Sneha Roy", 28, 62000)

# Calling the display() method
person1.display()
person2.display()
